[alias]
    adog = log --all --oneline --graph
    l = log --graph --all --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset) %C(dim white)%n''        %C(cyan)%aD%C(reset) - %C(dim white)%an%C(reset)'
    tls = ls-tree -r master --name-only
    fls = ls-files
    s = status
    r = remote -v
    co = checkout
    d = difftool
    b = branch
    f = fetch --all
    cot = checkout --track
    mg = merge --no-ff --no-commit
    rebase-c = rebase --continue
    rebase-a = rebase --abort
    ress = restore --staged
    res = restore
[http]
    sslVerify = false
    version = HTTP/1.1
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[credential]
    helper = cache --timeout=3600
[core]
    quotepath = off
    autocrlf = input
[color]
    ui = true
[diff]
    # make diff using vimdiff side-by-side mode
    tool = vimdiff
    relative = true
[difftool]
    prompt = false
[difftool "vimdiff"]
    # overwrite -R option
    cmd = vimdiff "$LOCAL" "$REMOTE"
[pull]
    rebase = false
