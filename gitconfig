[alias]
    adog = log --all --decorate --oneline --graph
    l = log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset) %C(dim white)%n''        %C(cyan)%aD%C(reset) - %C(dim white)%an%C(reset)'
    tls = ls-tree -r master --name-only
    fls = ls-files
    s = status
    r = remote -v
    co = checkout
    d = difftool
    b = branch
    f = fetch --all
    cot = checkout --track
    mg = merge --no-ff --no-commit
[http]
    sslVerify = false
    version = HTTP/1.1
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[credential]
    helper = cache --timeout=3600
[core]
    quotepath = off
[color]
    ui = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[difftool "vimdiff"]
    cmd = vimdiff "$REMOTE" "$LOCAL"
[pull]
    rebase = false
