[alias]
    adog = log --all --decorate --oneline --graph
    l = log --graph --all --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset)%C(auto)%d%C(reset) %C(white)%s%C(reset) %C(dim white)%n''        %C(cyan)%aD%C(reset) - %C(dim white)%an%C(reset)'
    tls = ls-tree -r HEAD --name-only
    fls = ls-files
    s = status
    r = remote -v
    co = checkout
    d = difftool
    # diff with structural diff tool difftactic
    dt = -c core.pager="less" difftool --tool=difftastic
    b = branch
    bs = branch --sort=committerdate
    f = fetch --all
    fp = fetch --prune
    cot = checkout --track
    mg = merge --no-ff --no-commit
    rebase-c = rebase --continue  # deprecated
    rebase-a = rebase --abort  # deprecated
    cm = commit -m
    cf = commit --fixup  # fixup commit
    ri = rebase -i --autosquash  # interactive rebase with autosquash fixup commit
    ra = rebase --abort
    rc = rebase --continue
    rs = rebase --skip
    ress = restore --staged
    res = restore
    wt = worktree
    # fetch master from origin
    fm = !git fetch origin master:master || git fetch origin main:main
    # fetch main from origin
    fmm = fetch origin main:main
    # list untracked files
    lu = ls-files --other --exclude-standard
    # list modified files
    lm = diff --name-only --diff-filter=M
    # list staged/added files
    la = diff --name-only --cached
    # list deleted files
    ld = diff --name-only --diff-filter=D
    # update all submodule
    supdate = submodule update --init --recursive
    # show all submodule status
    ss = submodule status
    # fetch unshallow
    ff = fetch --unshallow
    # diff name-only
    dn = diff --relative --name-only
    # show branch's first commit
    bf = log origin/HEAD... --oneline --pretty=format:%h | tail -1
    # get branch's first parent
    p = merge-base origin/HEAD @
    # get tags from current commit
    tc = tag --points-at
    # get branches from current commit
    bc = branch --all --contains
    # reset remote hard, because @{u}, @{upstream} is too hard to type
    reset-remote-hard = reset --hard @{upstream}
    # get remote default branch, (r)emote (h)ead
    rh = symbolic-ref refs/remotes/origin/HEAD --short
    # show branch and tracked upstream branch
    bt = branch -vv
[http]
    sslVerify = false
    version = HTTP/1.1
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[credential]
    helper = cache --timeout=3600
[core]
    quotepath = off
    autocrlf = input
    ignorecase = false
    hooksPath = ~/.gitconfighook  # global git hooks
    excludesFile = ~/.gitignore  # global git ignore
	untrackedCache = true
[color]
    ui = true
    pager = true
[diff]
    # make diff using vimdiff side-by-side mode
    # tool = vimdiff
    tool = nvimdiff
    # set relative will break difftoll if not in the root of git repo
    #relative = true
[difftool]
    prompt = false
    # make me able to cancel when a lot of files need to diff, :cq
    trustExitCode = true
[difftool "vimdiff"]
    # overwrite -R (read-only) option
    cmd = vimdiff "$LOCAL" "$REMOTE"
[difftool "nvimdiff"]
    # overwrite -R (read-only) option
    cmd = nvim -d "$LOCAL" "$REMOTE"
[difftool "difftastic"]
    cmd = difft --display side-by-side-show-both "$LOCAL" "$REMOTE"
[pull]
    rebase = false
[user]
	name = MrG
	email = ggg77599@gmail.com
[pull]
	ff = only
